<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="pulsaBoton">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#C5C5C5"
        android:text="0"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="404dp"
        android:layout_height="239dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="1dp">

        <TableRow
            android:layout_width="398dp"
            android:layout_height="132dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DA00FF"
                android:onClick="pulsaBorrar"
                android:text="CE" />

            <Button
                android:id="@+id/button12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DA00FF"
                android:onClick="pulsaBorrar"
                android:text="C" />

            <Button
                android:id="@+id/button13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DA00FF"
                android:text="DELETE" />

            <Button
                android:id="@+id/btnDividir"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:onClick="pulsaOperador"
                android:text="/" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="9" />

            <Button
                android:id="@+id/btnPor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:onClick="pulsaOperador"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="6" />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:onClick="pulsaOperador"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="3" />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#03A9F4"
                android:onClick="pulsaOperador"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button18"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFDDAC"
                android:onClick="pulsaBoton"
                android:text="," />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFBABA"
                android:onClick="pulsaBoton"
                android:text="0" />

            <Button
                android:id="@+id/button16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFDDAC"
                android:onClick="pulsaBoton"
                android:text="." />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E91E63"
                android:onClick="pulsaIgual"
                android:text="=" />
        </TableRow>

    </TableLayout>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="427dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/btnBinario"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:background="#00FD0A"
            android:onClick="pulsaBinario"
            android:text="BINARIO" />

        <Button
            android:id="@+id/btnHexa"
            android:layout_width="186dp"
            android:layout_height="64dp"
            android:background="#FFE500"
            android:onClick="pulsaHexa"
            android:text="HEXA" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="199dp"
        android:layout_height="167dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/tableRow"
        app:layout_constraintStart_toEndOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Button
            android:id="@+id/btn0Binario"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#246E27"
            android:onClick="pulsaBoton"
            android:text="0" />

        <Button
            android:id="@+id/btn1Binario"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:background="#28672B"
            android:onClick="pulsaBoton"
            android:text="1" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="236dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toTopOf="@+id/tableRow3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tableRow3"
        app:layout_constraintTop_toBottomOf="@+id/tableRow2">

        <Button
            android:id="@+id/btnA"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="A" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="B" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="63dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="C" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="238dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="@+id/tableRow4"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnD"
            android:layout_width="67dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="D" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="E" />

        <Button
            android:id="@+id/btnF"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#FBEF7D"
            android:onClick="pulsaBoton"
            android:text="F" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>